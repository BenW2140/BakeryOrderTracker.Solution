@{
  Layout = "_Layout";
}
@using BakeryOrderTracker.Models;

<h2>Current Vendors:</h2>

@if (Model.Count == 0)
{
  <p>There are currently no Vendors added!</p>
}
<ul>
  @foreach (Vendor vendor in Model)
  {
    <li><a href="/vendors/@vendor.Id">@vendor.Name</a></li>
  }
</ul>
<form action="/vendors/delete" method="post">
  <button type="submit">Remove Vendors</button>
</form>
<a href="/">Back to Home</a><br>
<a href="/vendors/new">Add a Vendor</a>